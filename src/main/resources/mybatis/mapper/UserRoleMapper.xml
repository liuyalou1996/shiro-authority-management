<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.universe.mapper.UserRoleMapper">
	<insert id="insertUserRole">
		insert into tbl_user_role ( user_id, role_id, create_time )
		values
		<foreach collection="list" item="userRole" separator=" ">
			( #{userRole.userId}, #{userRole.roleId}, #{userRole.createTime} )
		</foreach>
	</insert>

	<update id="deleteUserRoleById" parameterType="int">
		delete tbl_user_role where id = #{id}
	</update>
</mapper>