<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.universe.mapper.RoleMapper">

	<resultMap id="roleResultMap" type="role">
		<id property="roleId" column="role_id" />
		<result property="roleName" column="role_name" />
		<result property="description" column="description" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<select id="listRoles" resultMap="roleResultMap">
		select role_id,role_name,description,create_time,update_time from tbl_role
	</select>
	
	<select id="getRolesByUsername" parameterType="string" resultMap="roleResultMap">
		select tr.role_id,tr.role_name from tbl_role tr
		inner join tbl_user_role tur on tur.role_id = tr.role_id
		inner join tbl_user tu on (tu.user_id = tur.user_id and tu.status = 0)
		where tu.username = #{username}
	</select>
	
	<insert id="insertRole" parameterType="role">
		insert into tbl_role (role_name, description, create_time, update_time )
		values ( #{roleName}, #{description}, #{createTime}, #{updateTime} )
	</insert>
	
	<update id="updateRole" parameterType="role">
		update tbl_role
		<set>
			<if test="@com.universe.common.util.ValidatingUtils@isEmpty(roleName)">
					role_name = #{roleName},
			</if>
			<if test="@com.universe.common.util.ValidatingUtils@isEmpty(description)">
					description = #{description},
			</if>
			<if test="@com.universe.common.util.ValidatingUtils@isEmpty(createTime)">
					create_time = #{createTime},
			</if>
			<if test="@com.universe.common.util.ValidatingUtils@isEmpty(updateTime)">
					update_time = #{updateTime},
			</if>
		</set>
		where role_id = #{roleId}
	</update>
	
	<update id="deleteRoleByRoleId" parameterType="int">
		delete tbl_role where role_id = #{roleId}
	</update>
</mapper>